<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".log_reg.MainActivity"
    android:orientation="vertical"
    android:background="@color/gray"
    android:paddingBottom="10dp"
    android:gravity="center_horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@color/teal_700"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/back_login"
            android:layout_width="43dp"
            android:layout_height="43dp"
            app:srcCompat="@drawable/ic_baseline_arrow_left_24" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            android:text="ТІРКЕЛУ"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/btn_help"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="3dp"
            app:srcCompat="@drawable/ic_baseline_help_24"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_700"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_height="160dp"
            android:layout_width="160dp"
            app:srcCompat="@drawable/user_icon" />



        <EditText
            android:id="@+id/reg_fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_person_outline_24"
            android:inputType="textPersonName"
            android:background="@color/white"
            android:hint="  Аты-жөні"
            android:padding="10dp"
            android:textColorHint="@color/teal_700"
            android:layout_marginBottom="15dp"/>

        <EditText
            android:id="@+id/reg_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/nickname"
            android:inputType="textPersonName"
            android:background="@color/white"
            android:hint="  Қолданушы есімі"
            android:padding="10dp"
            android:textColorHint="@color/teal_700"
            android:layout_marginBottom="15dp"/>

        <EditText
            android:id="@+id/reg_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/phone"
            android:inputType="phone"
            android:background="@color/white"
            android:hint="  Телефон нөмері"
            android:padding="10dp"
            android:textColorHint="@color/teal_700"
            android:layout_marginBottom="15dp"/>

        <EditText
            android:id="@+id/reg_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/email"
            android:inputType="textEmailAddress"
            android:background="@color/white"
            android:hint="  Почта"
            android:padding="10dp"
            android:textColorHint="@color/teal_700"
            android:layout_marginBottom="15dp"/>
        <EditText
            android:id="@+id/reg_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/password"
            android:inputType="textPassword"
            android:background="@color/white"
            android:hint="  Құпия сөз"
            android:padding="10dp"
            android:textColorHint="@color/teal_700"
            android:layout_marginBottom="15dp"/>

        <EditText
            android:id="@+id/reg_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/confirm"
            android:inputType="textPassword"
            android:background="@color/white"
            android:hint="  Құпия сөзді растау"
            android:padding="10dp"
            android:textColorHint="@color/teal_700"
            android:layout_marginBottom="15dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_reg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="ТІРКЕЛУ"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:backgroundTint="@color/teal_700"/>

</LinearLayout>